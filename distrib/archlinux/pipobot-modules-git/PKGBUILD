# Maintainer: SÃ©bastien Leduc <sebastien@sleduc.fr>
pkgname=pipobot-modules-git
_projectname=pipobot-modules
pkgver=220.413945d
pkgrel=1
pkgdesc="Some modules for Pipobot, a bot for XMPP MUCs"
arch=("any")
url="https://github.com/pipoteam/pipobot-modules"
license=('GPL')
depends=('python' 'pipobot-git')
conflicts=('pipobot-modules')
optdepends=('python-beautifulsoup3: for modules parsing online content'
            'python-mpd2: for the MPD module'
            'mutagen: to edit ID3 tags in the MPD module'
            'python-simplejson: for google module'
            'python-pyinotify: for mail module'
            'mercurial: for the mercurial module'
            'python-pyenchant: for the spell module')
makedepends=('python' 'git')
source=("${_projectname}::git+https://github.com/pipoteam/pipobot-modules#branch=python3")
md5sums=('SKIP')


pkgver () {
  cd $_projectname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}
package() {
  cd "$srcdir/$_projectname"
  install -d -m755 "$pkgdir"/usr/share/pipobot/modules
  cp -ra * "$pkgdir"/usr/share/pipobot/modules
}

